rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get the user's role from the 'users' collection
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow managers to list the entire collection.
      allow list: if isAuthenticated() && getUserRole(request.auth.uid) == 'Manager';
      // Allow any authenticated user to read their own user document.
      allow get: if isAuthenticated() && request.auth.uid == userId;
      
      // Only Managers can create, update, or delete users
      allow write: if isAuthenticated() && getUserRole(request.auth.uid) == 'Manager';
    }

    // Rules for the 'projects' collection
    match /projects/{projectId} {
      // Any authenticated user can read projects (both Managers and Members)
      allow read: if isAuthenticated();

      // --- Write Rules for Projects ---
      function isProjectOwner() {
        return request.auth.uid == resource.data.assigneeId;
      }

      function isManager() {
        return getUserRole(request.auth.uid) == 'Manager';
      }

      // Managers have full write access
      // Members can only update specific fields on projects assigned to them
      allow create: if isManager();
      allow update: if isManager() || (isProjectOwner() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['progress', 'status', 'comments']));
      allow delete: if isManager();
    }

    // Rules for schedules, assignments, etc.
    match /{collection}/{docId} {
        // Managers can read and write all other collections
        allow read, write: if isAuthenticated() && getUserRole(request.auth.uid) == 'Manager';
    }
  }
}
